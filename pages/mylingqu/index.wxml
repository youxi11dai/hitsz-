<view wx:for="{{shiju.data}}" wx:key="_id" wx:for-item="itt">
    <navigator url="/pages/mygood/mygood?_id={{itt._id}}&lingqu={{itt.lingqu}}&conversation={{itt.conversation}}&description={{itt.description}}&name={{itt.name}}" bindtap="chuandi" data-itt="{{itt}}">
      <view>物品名称：{{itt.name}}</view>
      <view>物品描述：{{itt.description}}</view>
      <view> 领取方式或联系方式：{{itt.conversation}}</view>
      <view wx:if="{{itt.lingqu}}">已被领取</view>
      <view wx:else>未被领取</view>
    </navigator>
  </view>
